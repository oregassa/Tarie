<h1 align="center">All Items</h1>
<div class='new-post'><%= link_to "Add a new item", new_item_path%></div>
<% @items.each do |item| %>
  <div class="item-box"> 
        <div class="item-title">
          <%= link_to item.title, item_path(item) %>
        </div>
        <div class="item-description">
          <%= item.description %>
           <div class="post-meta-details">
          <small>Created by:  , 
                           <%= time_ago_in_words(item.created_at) %> ago,
                           last_updated: <%= time_ago_in_words(item.updated_at) %> ago
          </small>
          </div>
        </div>
          <div class="item-edit">
            <%= link_to "Edit this item", edit_item_path(item) %> 
          </div>
          <div class="item-delete">
            <%= link_to "Delete this item", item_path(item),
       method: :delete, data: {confirm: "Are you sure you want to delete this item?"} %>
          </div>
  </div>
<% end %> 







