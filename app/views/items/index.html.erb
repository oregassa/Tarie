<h1 align="center">All Items</h1>

<% if user_signed_in? %>
<% @items.each do |item| %>
<% if item.completed? %>

  <div class="completed-item-box"> 
        <div class="completed-item-title">
          <h2 style='opacity: 0.4'><strike><%= link_to item.title, item_path(item) %></strike></h2>
        </div>
        <p class="completed-item-description">
          <p style='opacity: 0.4'><%= item.description %></p>
        <div class="completed-item-time">
          <p style='opacity: 0.4'>
            Completed at: <%= time_ago_in_words(item.created_at) %> ago
          </p>
        </div>
        </p>
  </div>


  <% else %>


    <div class="item-box"> 
        <h2><div class="item-title">
          <%= link_to item.title, item_path(item) %>
        </div></h2>

        <p class="item-description">
          <%= item.description %>
        </p>
        <p class="item-time">
          Created at: <%= time_ago_in_words(item.created_at) %> ago
        </p>
        
      <div class='item-links'>
        <div class="item-edit">
         Edit:<%= link_to edit_item_path(item) do %> 
            <i class= 'fa fa-lg fa-edit'></i>
          <% end %>
        </div> 

        <div class="item-complete">
           Complete: <%= link_to complete_item_path(item), method: :patch do %> 
            <i class='fa fa-lg fa-check'></i>
          <% end %>
        </div>


        <div class="item-delete">
          Delete: <%= link_to item_path(item),
              method: :delete, data: {confirm: "Are you sure you want to delete this item?"} do %>

          <i class='fa fa-lg fa-trash'></i>
          <% end %>
        </div>
      </div>
    </div>


  <% end %>
<% end %>
  <% else %>
  <%= render 'pages/none_user' %>
<% end %>






